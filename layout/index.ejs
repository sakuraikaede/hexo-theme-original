<div class="d-flex align-items-center flex-column container">
    <% page.posts.each(function (post) { %>
        <div class="card" style="margin: 10px;width: 80%;">
            <div class="card-body">
              <h5 class="card-title"><%= post.title %></h5>
              <h6 class="card-subtitle mb-2 text-muted"><%- date(post.date, "YYYY-MM-DD") %></h6>
              <p class="card-text"><%- post.excerpt %></p>
              <a href="<%- url_for(post.path) %>" class="card-link">Read more...</a>
            </div>
          </div>
    <% }) %>
    <%- partial('_partial/paginator') %>
</div>