<div class="d-flex align-items-center flex-column container" style="padding-bottom: 20px;padding-top: 15px;">
    <% page.posts.each(function (post) { %>
        <div style="font-size: 22px;"><%= post.title %></div>
        <div style="font-size: 13px;color: gray;"><%- date(post.date, "MMMM Do YYYY") %></div>
        <div style="line-height: 1.7em;font-size: 15px;"><%- post.excerpt %></div>
        <a href="<%- url_for(post.path) %>" class="card-link">Read more...</a>
    <% }) %>  
</div>
<div class="d-flex align-items-center flex-column container">
  <%- partial('_partial/paginator') %>
</div>
